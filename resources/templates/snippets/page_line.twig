        <div class="row {{ class }}">
            <div class="col-12 col-lg-4 text-nowrap text-truncate">
                <span class="d-lg-none">Title: </span>
                {{ page.page_title }}
            </div>
            <div class="col-12 col-lg-6 text-nowrap text-truncate">
                <span class="d-lg-none">URL: </span>
                {{ page.page_url }}
            </div>
            <div class="col-12 col-lg-2">
                {% if page.page_immutable != 'true' or adm_lvl >= auth_lvl %}
                    <form action="{{ public_dir }}/manager/config/pages/" method="post">
                        <button type="submit" name="submit" value="modify" class="btn btn-primary btn-xs">Modify</button>
                        {% if adm_lvl >= auth_lvl %}
                            <button type="submit" name="submit" value="verify" class="btn btn-outline-danger btn-xs">Delete</button>
                        {% endif %}
                        {% include '@' ~ lib_prefix ~ 'forms/hidden_form_stuff.twig' %}
                        <input type="hidden" name="page_id" value="{{ page.page_id }}" />
                    </form>
                {% endif %}
            </div>
        </div>
