<form id="content-form" method="post" action="{{ public_dir }}/manager/config/content/">
    <div class="form-group">
        <label for="content[c_page_id]" class="form-label">Page</label>
        <select id="content[c_page_id]" name="content[c_page_id]" class="form-control colorful">
        {% for page in a_pages %}
            <option value="{{ page.page_id }}"{{ page.selected }}>{{ page.page_title }}</option>
        {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="content[c_content]" class="form-label">Content</label>
        <textarea id="content[c_content]" name="content[c_content]" class="form-control colorful">{{ content.c_content }}</textarea>
    </div>
    <div class="form-group">
        <label for="content[c_block]" class="form-label">Block</label>
        <select name="content[c_block]" id="content[c_block]" class="form-control colorful">
            {% for block in a_blocks %}
                <option value="{{ block.value }}"{{ block.checked }}>{{ block.label }}</option>
            {% endfor %}
        </select>
    </div>
</form>
{#
[
  public_dir
  a_pages[page_id,selected,page_titlr]
  content[c_content]
  a_blocks
]
#}
