    <div class="container" id="sidebar">
        {% if a_content.sidebar %}
            {% set ctype = a_content.sidebar.c_type %}
            {% set content = a_content.sidebar.c_content %}
            {% if ctype == 'html' or ctype == 'xml' or ctype == 'raw' %}
                {{ content | raw }}
            {% elseif ctype == 'md' %}
                {{ content | md }}
            {% elseif ctype == 'mde' %}
                {{ content | mde }}
            {% else %}
                {{ content | nl2br }}
            {% endif %}
        {% endif %}
    </div>
