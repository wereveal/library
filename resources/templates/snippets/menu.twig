<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#manager-nav">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="manager-nav">
            <ul class="nav navbar-nav">
            {% for menu in menus %}
                {% if menu.class == 'active' %}
                    {% set spanstuff = ' <span class="sr-only">(current)</span>' %}
                {% else %}
                    {% set spanstuff = '' %}
                {% endif %}
                <li class="{{ menu.class }}"><a href="{{ public_dir }}{{ menu.url }}">{{ menu.name }}{{ spanstuff }}</a></li>
            {% endfor %}
            </ul>
        </div><!-- /.navbar-collapse -->

    </div><!-- /.container-fluid -->
</nav>