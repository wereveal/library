{% extends '@' ~ page_prefix ~ 'default/base.twig' %}
{% block body %}
    <div class="container">
        <ul class="test-results">
            <li>Number of Failed Tests: <span class="red">{{ failed_tests }}</span></li>
            <li>Number of Skipped Tests: {{ skipped_tests }}</li>
            <li>Number of Passed Tests: {{ passed_tests }}</li>
            <li>Total Number of Tests: {{ num_o_tests }}</li>
        {% if failed_test_names is not empty %}
            <li>Failed Test Names <i class=" fa fa-thumbs-o-down"></i>
                <ul>
                {% for failedTest in failed_test_names %}
                    {% if failedTest.subtest_failed %}
                    <li>{{ failedTest.name }}<br />
                        <p class="red m-0">Failed Subtests</p>
                        <ul>
                        {% for subname in failedTest.subtest_failed %}
                            <li>{{ subname }}</li>
                        {% endfor %}
                        </ul>
                    {% if failedTest.subtest_success %}
                        <p class="green m-0">Successful Subtests</p>
                        <ul>
                        {% for subname in failedTest.subtest_success %}
                            <li>{{ subname }}</li>
                        {% endfor %}
                        </ul>
                    {% endif %}
                    </li>
                    {% else %}
                    <li>{{ failedTest.name }}</li>
                    {% endif %}
                {% endfor %}
                </ul>
            </li>
        {% endif %}
        {% if skipped_test_names %}
            <li>Skipped Test Names <i class="fa fa-hand-peace-o"></i>
                <ul>
                {% for skipped in skipped_test_names %}
                    <li>{{ skipped }}</li>
                {% endfor %}
                </ul>

            </li>
        {% endif %}
        {% if passed_test_names %}
            <li>Passed Test Names <i class="fa fa-thumbs-o-up"></i>
                <ul>
                {% for passedTest in passed_test_names %}
                    {% if passedTest.subtest_names %}
                    <li>
                        {{ passedTest.name }}
                        <ul>
                            {% for subname in passedTest.subtest_names %}
                            <li>{{ subname }}</li>
                            {% endfor %}
                        </ul>
                    </li>
                    {% else %}
                    <li>{{ passedTest.name }}</li>
                    {% endif %}
                {% endfor %}
                </ul>
            </li>
        {% else %}
            <li>No Passed Tests <i class="fa fa-thumbs-o-down"></i></li>
        {% endif %}
        </ul>
    </div>
{% endblock %}
