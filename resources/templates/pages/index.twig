{% extends '@' ~ lib_prefix ~ 'themes/' ~ theme_name ~ '.twig' %}
{% block body %}
            <div class="container container-main">
{% for link in links %}
    {% if link.submenu %}
        {% for menu in link.submenu %}
            {% if loop.index is even %}
                {% set menu_class = menu.nav_class ~ 'odd' %}
            {% else %}
                {% set menu_class = menu.nav_class ~ 'even' %}
            {% endif %}
                <div class="row {{ menu_class }}">
                    <div class="col-2 aright">
                        <a href="{{ menu.url }}" class="{{ menu_class }} font-small-caps-bold">{{ menu.nav_text }}</a>
                    </div>
                    <div class="col-10">
                        {{ menu.nav_description }}
                    </div>
                </div>
        {% endfor %}
    {% endif %}
{% endfor %}
            </div>
{% endblock %}
