{% extends '@' ~ page_prefix ~ 'pages/index.twig' %}
{% block body %}
    <div class="container">
        <div class="row list-header hidden-sm-down">
            <div class="col-md-4">Name</div>
            <div class="col-md-4">Value</div>
            <div class="col-md-1">Immutable</div>
            <div class="col-md-3">&nbsp;</div>
        </div>
        <form action="{{ public_dir }}/manager/config/constants/" method= "post">
        {% set class = 'even' %}
        <div class="row {{ class }}">
            <div class="col-12 col-md-4">
                <label for="constant[const_name]" class="hidden-md-up bold pr-1">Constant Name</label>
                <input type="text" id="constant[const_name]" name="constant[const_name]" value="" maxlength="32" class="colorful pw100" />
            </div>
            <div class="col-12 col-md-4">
                <label for="constant[const_value]" class="hidden-md-up bold pr-1">Constant Value</label>
                <input type="text" name="constant[const_value]" id="constant[const_value]" value="" maxlength="32" class="colorful pw100"/>
            </div>
            <div class="col-6 col-md-1">
                {% if adm_lvl == 10 %}
                <label for="constant[const_immutable]" class="hidden-md-up bold pr-1">Immutable</label>
                <input type="checkbox" name="constant[const_immutable]" id="constant[const_immutable]" value="1">
                {% else %}
                    Immutable
                {% endif %}
            </div>
            <div class="col-6 col-md-3">
                <button type="submit" name="submit" value="save_new" class="btn btn-primary btn-xs">Save New</button>
                <input type="hidden" name="tolken" value="{{ tolken }}" />
                <input type="hidden" name="form_ts" value="{{ form_ts }}" />
                <label class="hobbit">Humans don't enter anything here.
                <input type="text" name="hobbit" value="" size="2" maxlength="2" class="hobbit" />
                </label>
            </div>
        </div>
        </form>
        {% for row in a_constants %}
            {% set class = class == 'even' ? 'odd' : 'even' %}
            <form action="{{ public_dir }}/manager/config/constants/" method="post">
            <div class="row {{ class }}">
                <div class="col-12 col-md-4">
                    <label for="constant[const_value]" class="hidden-md-up bold pr-1">Constant Name</label>
                    {% if row.const_immutable == 1 %}
                        <input type="hidden" name="constant[const_name]" id="constant[const_name]" value="{{ row.const_name }}" />{{ row.const_name }}
                    {% else %}
                        <input type="text" name="constant[const_name]" id="constant[const_name]" value="{{ row.const_name }}" class="colorful pw100">
                    {% endif %}
                </div>
                <div class="col-12 col-md-4">
                    <label for="constant[const_value]" class="hidden-md-up bold pr-1">Constant Value</label>
                    <input type="text" name="constant[const_value]" id="constant[const_value]" value="{{ row.const_value }}" maxlength="32" class="colorful pw100"/>
                </div>
                <div class="col-6 col-md-1 col-sm-2 col-xs-2">
                    <label for="constant[const_immutable]" class="hidden-md-up bold pr-1">Immutable</label>
                    {% if row.const_immutable == 1 and adm_lvl < 10 %}
                        True
                    {% else %}
                        {% if row.const_immutable == 1 %}
                            {% set checked = ' checked' %}
                        {% else %}
                            {% set checked = '' %}
                        {% endif %}
                        <input type="checkbox" name="constant[const_immutable]" id="constant[const_immutable]" value="1"{{ checked }}>
                    {% endif %}
                </div>
                <div class="col-md-2 col-sm-2 col-xs-2">
                    <button type="submit" name="submit" value="update" class="btn btn-primary btn-xs">Save</button>
                    {% if row.const_immutable != 1 %}
                    <button type="submit" name="submit" value="verify" class="btn btn-warning btn-xs">Delete</button>
                    {% endif %}
                    <input type="hidden" name="tolken" value="{{ tolken }}" />
                    <input type="hidden" name="form_ts" value="{{ form_ts }}" />
                    <label for="hobbit" class="hobbit">Humans don't enter anything here.
                        <input type="text" name="hobbit" value="" size="2" maxlength="2" class="hobbit" />
                    </label>
                    <input type="hidden" name="constant[const_id]" value="{{ row.const_id }}" />
                </div>
            </div>
            </form>
        {% endfor %}
        {% set class = class == 'even' ? 'odd' : 'even' %}
        <form action="{{ public_dir }}/manager/config/constants/" method= "post">
            <div class="row {{ class }}">
                    <div class="col-12 col-md-4">
                        <label for="constant[const_name]" class="hidden-md-up bold pr-1">Constant Name</label>
                        <input type="text" id="constant[const_name]" name="constant[const_name]" value="" size="30" maxlength="32" class="colorful w200" />
                    </div>
                    <div class="col-12 col-md-4">
                        <label for="constant[const_value]" class="hidden-md-up bold pr-1">Constant Value</label>
                        <input type="text" id="constant[const_value]" name="constant[const_value]" value="" maxlength="32" class="colorful w200"/>
                    </div>
                    <div class="col-6 col-md-1">
                        {% if adm_lvl == 10 %}
                            <label for="constant[const_immutable]" class="hidden-md-up bold pr-1">Immutable</label>
                            <input type="checkbox" id="constant[const_immutable]" name="constant[const_immutable]" value="1">
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="submit" name="submit" value="save_new" class="btn btn-primary btn-xs">Save New</button>
                        <input type="hidden" name="tolken" value="{{ tolken }}" />
                        <input type="hidden" name="form_ts" value="{{ form_ts }}" />
                        <label for="hobbit" class="hobbit">Humans don't enter anything here.
                            <input type="text" name="hobbit" value="" size="2" maxlength="2" class="hobbit" />
                        </label>
                    </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <h3>Instructions</h3>
            <ul>
            <li>Constant Name must be letters only. The constant name will be
            converted to all caps, spaces to underscores, and all other
            characters removed, e.g., 'my 2nd config!' will become
            'MY_ND_CONFIG'.</li>
            <li>Constant values will be sanitized (hacker prevention) but
            otherwise remain as typed. Values are limited to 64 characters.</li>
            <li>Immutable means you can't change the Constant Name or delete it.
            <b class="red bold">So be careful!</b>
            If you set something immutable, it can't go back.</li>
            </ul>
        </div>
    </div>
{% endblock %}
