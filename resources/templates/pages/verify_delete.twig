{% extends '@' ~ page_prefix ~ 'default/base.twig' %}
{% block body %}
    <div class="container">
        <h1 class="smaller red">Please Verify</h1>
        <p class="alert alert-danger" role="alert">Please verify you wish to delete the {{ what }} '{{ name }}'.</p>
        <form action="{{ public_dir }}{{ page_url }}" method="post" id="delete-form" class="pad-bottom">
            <button type="submit" name="submit" value="delete" class="btn btn-danger btn-sm">Delete {{ btn_value }}</button>
            <button type="submit" name="submit" value="cancel" class="btn btn-primary btn-sm">Cancel</button>
            <input type="hidden" name="{{ hidden_name }}" value="{{ hidden_value }}" />
            <input type="hidden" name="tolken" value="{{ tolken }}" />
            <input type="hidden" name="form_ts" value="{{ form_ts }}" />
            <input type="text" name="hobbit" value="" class="hobbit" size="2" maxlength="2" />
        </form>
    </div>
{% endblock %}
