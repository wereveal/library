{% extends '@' ~ lib_prefix ~ 'themes/' ~ theme_name ~ '.twig' %}
{% block body %}
    {% set class = 'odd' %}
    <div class="container">
        <div class="row list-header sticky-top">
            <div class="col-12 col-md-6">
                Name
            </div>
            <div class="col-3 col-md-1">
                Active
            </div>
            <div class="col-3 col-md-1">
                Default
            </div>
            <div class="col-6 col-md-4">
                &nbsp;
            </div>
        </div>
        <form action="{{ public_id }}/manager/config/navgroups/" method="post" id="navgroups-new">
            <div class="row {{ class }}">
                <div class="col-12 col-md-6">
                    <label for="ng_name" class="hidden-md-up pr-1">Name</label>
                    <input type="text" class="colorful pw100" name="ng_name" id="ng_name" value="">
                </div>
                <div class="col-3 col-md-1">
                    {% include '@' ~ page_prefix ~ 'elements/checkbox.twig' with blank_active %}
                </div>
                <div class="col-3 col-md-1">
                    {% include '@' ~ page_prefix ~ 'elements/checkbox.twig' with blank_default %}
                </div>
                <div class="col-6 col-md-4">
                    {% include '@' ~ page_prefix ~ 'forms/new_btn.twig' with blank_new  %}
                </div>
            </div>
        </form>
    {% for nav in a_nav %}
        {% set class = class == 'odd' ? 'even' : 'odd' %}
        <form action="{{ public_id }}/manager/config/navgroups/" method="post" id="navgroups-update">
            <div class="row {{ class }}">
                <div class="col-12 col-md-6">
                    <label for="ng_name" class="hidden-md-up pr-1">Name</label>
                    <input type="text" class="colorful pw100" name="ng_name" id="ng_name" value="{{ nav.name }}">
                </div>
                <div class="col-3 col-md-1">
                    {% include '@' ~ page_prefix ~ 'elements/checkbox.twig' with nav.active_btn %}
                </div>
                <div class="col-3 col-md-1">
                    {% include '@' ~ page_prefix ~ 'elements/checkbox.twig' with nav.default_btn %}
                </div>
                <div class="col-6 col-md-4">
                    {% include '@' ~ page_prefix ~ 'forms/update_delete_btns.twig' with nav.action_btns %}
                </div>
            </div>
        </form>
    {% endfor %}
