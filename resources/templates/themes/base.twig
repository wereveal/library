{% block start %}<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
    <meta charset="{{ charset }}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="{{ base_url }}">
{% endblock %}
{% block title %}
    <title>{{ title }}</title>
{% endblock %}
{% block description %}
    <meta name="description" content="{{ description }}">
{% endblock %}
{% block meta %}{% endblock %}
{% block vendor_stylesheets %}
    <link href="{{ fonts_dir }}/fontawesome/css/fa-svg-with-js.css">
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ css_dir }}/styles_library.css" media="screen">
{% endblock %}
{% block icons %}
    <link rel="apple-touch-icon" sizes="180x180" href="{{ images_dir }}/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="{{ images_dir }}/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ images_dir }}/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="{{ images_dir }}/manifest.json">
    <link rel="mask-icon" href="{{ images_dir }}/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="{{ images_dir }}/favicon.ico">
    <meta name="msapplication-config" content="{{ images_dir }}/browserconfig.xml">
{% endblock %}
{% block vendor_js %}
    <script src="{{ vendor_dir }}/jquery/dist/jquery.min.js"></script>
    <script src="{{ fonts_dir }}/fontawesome/js/fontawesome-all.min.js"></script>
{% endblock %}
{% block head_js %}{% endblock %}
{% block mainContainer %}
</head>
<body>
    <div class="container container-main">
{% endblock %}
{% block header %}
    {% block navbar %}
        {% if mainNavName is empty %}
            {% set mainNavName = 'mainNav' %}
        {% endif %}
        <nav class="navbar navbar-expand-md navbar-dark bg-gray no-margin" role="navigation">
            {% block navbarToggler %}
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#{{ mainNavName }}">
                <span class="far fa-bars slate"></span>
            </button>
            {% endblock %}
            {% block navbarBrand %}
            <a class="navbar-brand" href="#"><span class="far fa-cog fa-2x slate"></span></a>
            {% endblock %}
            <div class="collapse navbar-collapse" id="{{ mainNavName }}">
                <ul class="navbar-nav mr-auto">
                    {% for menu in a_menus %}
                        {% if menu.css != '' %}
                            {% set extra_css %}
                                {{ ' ' ~ menu.css }}
                            {% endset %}
                        {% else %}
                            {% set extra_css = '' %}
                        {% endif %}
                        {% if menu.url == page_url %}
                            {% set active_url = ' active' %}
                        {% else %}
                            {% set active_url = '' %}
                        {% endif %}
                        {% if menu.submenu is empty %}
                            <li class="nav-item">
                                <a class="nav-link{{ extra_css }}{{ active_url }}" href="{{ public_dir }}{{ menu.url }}">{{ menu.text }}</a>
                            </li>
                        {% else %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle{{ menu.css }}{{ active_url }}" data-toggle="dropdown" href="{{ public_dir }}{{ menu.url }}" role="button" aria-haspopup="true" aria-expanded="false">{{ menu.text }}</a>
                                <div class="dropdown-menu">
                                    {% for child in menu.submenu %}
                                        {% if child.css != '' %}
                                            {% set extra_css %}
                                                {{ ' ' ~ child.css }}
                                            {% endset %}
                                        {% else %}
                                            {% set extra_css = '' %}
                                        {% endif %}
                                        {% if child.url == page_url %}
                                            {% set active_url = ' active' %}
                                        {% else %}
                                            {% set active_url = '' %}
                                        {% endif %}
                                        <a class="dropdown-item{{ extra_css }}{{ active_url }}" href="{{ public_dir }}{{ child.url }}">{{ child.text }}</a>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </nav>
    {% endblock %}
    {% block otherHeader %}{% endblock %}
{% endblock %}
{% block search %}{% endblock %}
{% block body_title %}
    {% if body_title %}
        <h1>{{ body_title }}</h1>
    {% elseif title %}
        <h1>{{ title }}</h1>
    {% endif %}
{% endblock %}
{% block message %}
    {% if a_message.message %}
        <div class="container container-message">
            {% include '@' ~ lib_prefix ~ 'snippets/message.twig' %}
        </div>
    {% endif %}
{% endblock %}
{% block body %}
        <div class="container">
            {{ body_text }}
        </div>
{% endblock %}
{% block footer %}
        <div class="container footer">
            <p>Copyright &copy;&nbsp;{{ copyright_date }} <strong><a href="{{ site_url }}">{{ rights_holder }}</a></strong>, All Rights Reserved</p>
        </div>
{% endblock %}
{% block debug %}
    {% if debug_text %}
        <div class="container">
            <code class="pre">
                {{ debug_text }}
            </code>
        </div>
    {% endif %}
        <p class="font-tiny">Library Base Tpl</p>
{% endblock %}
{% block endMain %}
    </div>
{% endblock %}
{% block bottom_vendor_js %}
    <script src="{{ vendor_dir }}/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ vendor_dir }}/jquery-validation/dist/jquery.validate.min.js"></script>
{% endblock %}
{% block bottom_js %}{% endblock %}
{% block finally %}
</body>
</html>
{% endblock %}
