            <form action="{{ public_dir }}{{ login_url }}" method="post" id="login-form" class="form-horizontal needs-validation" novalidate>
                <div class="form-group row">
                    <label for="login_id" class="col-sm-2">Login ID: </label>
                    <div class="col-sm-10 aleft">
                        <input type="text" id="login_id" name="login_id" class="form-control colorful" maxlength="64" width="32" value="{{ login_id }}" required>
                        <div class="invalid-feedback">
                            Please enter your login name.
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-2">Password: </label>
                    <div class="col-sm-10 aleft">
                        <input type="text" id="password" name="password" class="form-control colorful" maxlength="64" width="32" value="" autocomplete="off" required>
                        <div class="invalid-feedback">
                            Please enter your password.
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        {% include '@' ~ lib_prefix ~ 'forms/hidden_form_stuff.twig' %}
                        <button type="submit" name="submit" value="verifyLogin" class="btn btn-primary">Log In</button>
                    </div>
                </div>
            </form>
