<form action="{{ form_action }}" method="post"{% if form_class != '' %} class="{{ form_class }}{% endif %}">
    <button type="submit" name="submit" value="{{ btn_value }}" class="btn {{ btn_color }}{% if btn_size != '' %} {{ btn_size }}{% endif %}">{{ btn_label }}</button>
    <input type="hidden" name="tolken" value="{{ tolken }}" />
    <input type="hidden" name="form_ts" value="{{ form_ts }}" />
    <label for="hobbit" class="hobbit">Humans don't fill this in
        <input type="text" name="hobbit" value="" size="2" maxlength="2" class="hobbit" />
    </label>{% if hidden_name != '' %}
    <input type="hidden" name="{{ hidden_name }}" value="{{ hidden_value }}" />{% endif %}
</form>
